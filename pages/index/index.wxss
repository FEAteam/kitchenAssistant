/**index.wxss**/
@import "../template/template.wxss";

page{
  background-color: #f6f7f8;
}
.search{
  position: fixed;
  top:10rpx;
  left:10%;
  transform: translateX(-5%);
  width: 90%;
  background-color: #f6f7f8;
  z-index: 100;
  border-radius: 38rpx;
  font-size: 14px;
}
.search input{
  height: 78rpx;
  padding:0 18rpx;
}
.search image{
  width: 78rpx;
  height: 78rpx;
  padding:16rpx;
  box-sizing: border-box;
  object-fit: cover;
  position:absolute;
  top:0;
  right:0;
  z-index:1000;
}
swiper{
  height: 200px;
}
swiper image{
  width: 100%;
  object-fit: cover;
}
.fresh{
  margin-top: 40rpx;
  padding:20rpx;
  background-color: #fff;
}
.fresh .content_title{
  border-left:2px solid #59c457;
  padding:0 20rpx;
  margin-bottom: 30rpx;
  color:#333;
  font-size: 16px;
}
.fresh_list{
  height:330rpx; 
  width:100%; 
  display: flex; 
  display: -webkit-box; 
  flex-direction: column;
}
.flex_child{
  width: 260rpx; 
  height: 100%;  
  margin-right: 30rpx;
  flex: 1;
}
.flex_child:last-child{
  margin-right: 0;
}
.fresh_list_img{
  display: inline-block;
  width: 260rpx;
  height: 260rpx;
}
.fresh_list_img image{
  width: 100%;
  height: 100%;
  object-fit: cover
}
.fresh_list_name{
  font-size: 14px;
  color:#999;
  text-align: center;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.scene_list .scene_flex{
  width: 33.33%; 
  height: 100%;  
  flex: 1;
}
.scene{
  background-color: #fff;
  text-align: center;
}
.scene_list{
  width:100%; 
  display: flex; 
  display: -webkit-box; 
  flex-direction: column;
}
.scene_flex_img{
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
  margin: 20rpx 0 0;
}
.scene_flex_name{
  font-size: 14px;
  color:#999;
  padding:10rpx 0;
}
.more{
  background-color: #fff;
  margin-top: 40rpx;
  padding:20rpx;
}
.more .content_title{
  border-left:2px solid #59c457;
  padding:0 20rpx;
  margin-bottom: 30rpx;
  color:#333;
  font-size: 16px;
}
.error{
  position: absolute;
  top:0;
  right: 0;
  left: 0;
  bottom:0;
  z-index: 1000;
  padding-top: 30%;
  text-align: center;
  background-color: #fff;
}